doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    script(type='text/javascript', src='https://www.gstatic.com/charts/loader.js')
  body
    .col-md-6.col-md-offset-3.styled
      .custom-padding
        form(action='/admin/create', method='get')
          .form-group
            label(for='question') Poll
            input#new-poll.form-control.input-lg(type='text', name='question', placeholder='Enter your question for poll')
          .form-group
            label(for='options') Options seperated by /
            input#new-opts.form-control.input-lg(type='text', name='options', placeholder='Please enter options seperated by / ')
          .text-center
            button#create.btn.btn-lg.btn-warning Create
  script(src='/jquery.min.js', type='text/javascript')
  script(src='/main.js', type='text/javascript')
