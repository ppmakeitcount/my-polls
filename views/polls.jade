extends layout

block content
    div.col-md-8.text-center
        div#pollFor(style="padding: 40px;")
            h1#question
            div.row
                div#show-opts.col-md-6
                div#option-add.col-md-6.input-group
                    input#new-option.form-control(type='text', placeholder='add your own option')
                    div.input-group-btn
                        button#add-new-option.btn.btn-default add
            div.row
                a#vote.btn.btn-success.btn-block.btn-lg(style="margin-top: 30px") Vote
        div#showchart
    div.row.col-md-4
        h3 Polls
        div#rooms.list-group
    script(src="/jquery.min.js",type="text/javascript")
    script(src="/main.js",type="text/javascript")
